<%- contentFor('body') %>
 <div class="form-container">
            <div class="form-red">
                <h2>Welcome back!</h2>
                <p class="red-add-text">To keep connected with us  please login<br>with your personal info</p>
                <input type="submit" value="Sign in" class="form-but white-but"/>
            </div>
            <div class="form-white">
                <h2>Create Account</h2>
                <ul class="social-icons">
                    <li><a href="http://www.facebook.com" class="fa fa-facebook"></a></li>
                    <li><a href="https://www.google.com" class="fa fa-google"></a></li>
                    <li><a href="http://www.twitter.com" class="fa fa-twitter"></a></li>
                </ul>
                <p class="white-add-text">or use your email for registration</p>
                <form id="reg-form" name="registration" action="/auth/reg">
                    <input type="text" id="login" placeholder="Login" title='Username can contain numbers, letters and symbol "_". The first character is required a letter.'/>
                    <input type="email" id="email" placeholder="Email" title="Email address must be existing."/>
                    <input type="password" id="password" placeholder="Password" title="Password must include letters, numbers and contain at least eight characters."/>
                    <input type="submit" value="Sign up" class="form-but red-but"/>
                </form>
            </div>
        </div>
<script src="/scripts/registration.js"></script>
